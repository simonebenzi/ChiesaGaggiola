<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/group_image"
            android:layout_width="408dp"
            android:layout_height="161dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" card_view:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/group_text"
            android:layout_width="101dp"
            android:layout_height="38dp"
            android:textAlignment="center"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" card_view:layout_constraintTop_toTopOf="@+id/popup_image"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="26dp" card_view:srcCompat="@drawable/outline_more_vert_24"
            android:id="@+id/popup_image"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" card_view:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>