<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar_settings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Inserire Indirizzo IP Arduino"
        android:textColor="@color/grey"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="2"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/etArduinoIP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25dp"
            android:hint="e.g. 192.168.1.161"/>

        <Button
            android:id="@+id/bttSetArduinoIP"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/etArduinoIP"
            android:background="@drawable/rounded_button_sfondo_bianco"
            android:text="SET"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>